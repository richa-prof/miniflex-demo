<div>
  <% if @page_tab == "movies" %>
    <h1>Listing all Movies</h1>
    <div class="movies_list">
      <%= render :partial => "list", :movies => @movies %>
    </div>
  <% elsif @page_tab == "suggest" %>
    <% if @movies.any? %>
      <h1>Listing all Suggest Movies</h1>
      <div class="">
        <%= render :partial => "list", :movies => @movies %>
      </div>
    <% else %>
      <h1>You have not followed any Movie, Star and Genre yet.</h1>
    <% end %>
  <% elsif @page_tab == "genres" %>
    <h1>Listing all Genres</h1>
    <table>
     <tr>
      <th>Name</th>
      <th>Action</th>
     </tr>
     <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td id="<%= follow_link_id(genre) %>" >
        <%= render 'follows_links', object: genre %>
     </tr>
     <% end %>
    </table>
    <%= will_paginate @genres, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <% elsif @page_tab == "stars" %>
    <h1>Listing all Stars</h1>
    <table>
     <tr>
      <th>Name</th>
      <th>Action</th>
     </tr>
     <% @stars.each do |star| %>
     <tr>
      <td ><%= star.name %></td>
      <td id="<%= follow_link_id(star) %>" >
        <%= render 'follows_links', object: star %>
      <td>  
     </tr>
     <% end %>
    </table>
    <%= will_paginate @stars, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <% end %>
</div>
